#!/bin/sh -e
#
# rc.local file for pifon startup
# copy to /etc and make sure its executable
#

PIFON_USER=chris
PIFON_HOME=/home/chris/pifon
DARKICE=/usr/bin/darkice

# run darkice
if [ -x $DARKICE ]; then
   (cd $PIFON_HOME ; ./tmux_run $PIFON_USER darkice "./looper $DARKICE")
fi

# run pifon_audio
(cd $PIFON_HOME ; ./tmux_run $PIFON_USER audio "./looper ./xmppbot.py ./pifon_audio") 

exit 0
